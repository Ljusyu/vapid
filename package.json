{
  "name": "vapid-cli",
  "version": "0.1.0",
  "description": "CLI for Vapid, a template-driven CMS.",
  "author": "Scott Robbin <scott@vapid.com>",
  "private": true,
  "bin": {
    "vapid-cli": "./bin/cli.js"
  },
  "scripts": {
    "build": "pkg bin/vapid -c package.json -o dist/vapid",
    "test": "./node_modules/.bin/mocha"
  },
  "pkg": {
    "targets": [
      "node8-alpine-x64",
      "node8-linux-x64",
      "node8-macos-x64",
      "node8-win-x64"
    ]
  },
  "dependencies": {
    "colors": "^1.1.2",
    "commander": "^2.12.2",
    "ejs": "^2.5.7",
    "koa": "^2.4.1",
    "koa-log": "^2.1.0",
    "koa-router": "^7.3.0",
    "koa-send": "^4.1.2",
    "koa-views": "^6.1.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1"
  }
}
