<h1 class="ui header"><%- record.group.displayName %></h1>

<form class="ui form" action="<%- action %>" method="POST">
  <% for (let fieldName in record.group.fields) { %>
    <div class="field">
      <label><%- fieldName %></label>
      <%- record.group.fieldInput(fieldName, record.contentFor(fieldName)) %>
    </div>
  <% } %>

  <input class="ui button" type="submit" value="Update">
</form>
